{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://github.com/fvutils/mkdv/mkdv.schema.json",
	"title": "mkdv.yaml schema",
	"description": "Schema for mkdv.yaml job-description files",
	"type": "object",
	"properties": {
		"job-group": {
			"$ref": "#defs/jobGroupType"
		},
		"job": {
			"$ref": "#/defs/jobType"
		}
	},
	"oneOf": [
		{ "required": [ "job-group" ] },
		{ "required": [ "job" ] }
	],
	"additionalProperties": false,
	"defs": {
		"jobType": {
			"type": "object",
			"properties": {
				"name": {
					"description": "Test leafname",
					"type": "string"
				},
				"description": {
					"description": "Description of the job",
					"type": "string"
				},
				"runner": { 
					"$ref": "#/defs/runner" 
				},
				"run-generators": { 
					"type": "array",
					"items": {
						"$ref": "#defs/generator-spec"
					}
				},
				"setup-generators": { 
					"type": "array",
					"items": {
						"$ref": "#defs/generator-spec"
					}
				},
				"setup-vars": {
					"description": "Variables used for the setup step",
					"type": "array",
					"items": {
						"$ref": "#/defs/var" 
					}
				},
				"run-vars": {
					"description": "Variables used for the run step",
					"type": "array",
					"items": {
						"$ref": "#/defs/var" 
					}
				},
				"attachments": {
					"description": "Files to attach to the result report",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"labels": {
					"description": "Labels that apply to the job",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"parameters": {
					"description": "Parameters to apply to the job",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"limit-time": {
					"description": "Specifies job time limit in units of s,m,h",
					"type": "string"
				}
			},
			"required": [ "name" ]
		},
	    "jobGroupType": {
	    	"type": "object",
	    	"properties": {
	    		"name": {
	    			"type": "string"
	    		},
				"run-generators": { 
					"description": "Generators to execute during run step",
					"type": "array",
					"items": {
						"$ref": "#defs/generator-specs"
					}
				},
				"setup-generators": { 
					"description": "Generators to run during setup",
					"type": "array",
					"items": {
						"$ref": "#defs/generator-specs"
					}
				},
	    		"setup-vars": {
	    			"type": "array",
	    			"items": {
	    				"$ref": "#/defs/var"
	    			}
	    		},
	    		"run-vars": {
	    			"type": "array",
	    			"items": {
	    				"$ref": "#/defs/var"
	    			}
	    		},
				"labels": {
					"description": "Labels that apply to jobs in the group",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
	    	    "jobs": {
	    	    	"type": "array",
					"items": {
						"oneOf": [
							{
								"$ref": "#/defs/jobType"
							},
							{
		    	    			"type": "object",
		    	    			"properties": {
									"path": {
										"description": "Path to another job-spec",
										"type": "string"
									},
									"command": {
										"description": "Command to run to produce a testlist",
										"type": "string"
									}
								},
								"required": ["path"]
							}
						]
					}
				},
				"limit-time": {
					"description": "Default job-time limit in units of s,m,h",
					"type": "string"
				}
	    	},
	    	"required": ["jobs"],
	    	"additionalProperties": false
	    },
	   "runner": {
			"description": "Specifies the runner to use for this job or jobs",
			"type": "object",
			"properties": {
				"id": {
					"type": "string",
					"description": "Id for the runner to use"
				},
				"auto-discover": {
					"type": "boolean",
					"description": "True if the runner will identify jobs in this group"
				},
				"config": {
					"type": "object",
					"description": "Runner-specific configuration data"
				}
			}
	   	},
	    "run-generators": {
	    	"description": "Specifies run-phase generators to execute",
	    	"type": "array",
	    	"items": {
	    		"$ref": "#defs/generator-spec"
	    	}
	   	},
	    "setup-generators": {
	    	"description": "Specifies setup-phase generators to execute",
	    	"type": "array",
	    	"items": {
	    		"$ref": "#defs/generator-spec"
	    	}
	   	},
	    "generator-spec": {
	    	"description": "Key parameters to a generator",
	    	"type": "object",
	    	"properties": {
	    		"id": {
	    			"type": "string"
	    		},
	    		"config": {
	    			"type": "object"
	    		}
	    	}
	    },
		"var": {
			"oneOf": [
				{
					"description": "Full-feature form of specifying variables",
					"type": "object",
					"properties": {
						"var": {
							"type": "string"
						},
						"val": {
							"type": "string"
						},
						"append-path": {
							"type": "string"
						},
						"append-list": {
							"type": "string"
						},
						"prepend-path": {
							"type": "string"
						},
						"prepend-list": {
							"type": "string"
						},
						"override": {
							"type": "boolean"
						}
					},
					"required": ["var"]
				},
				{
					"description": "Simple key/value form of specifying variables",
					"type": "object"
				}
			]
		}
	}
}


